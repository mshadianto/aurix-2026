# ============================================
# AURIX 2026 Environment Configuration
# Copy this file to .env and fill in your values
# ============================================

# Application
APP_ENV=development
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=change-me-in-production

# ============================================
# SUPABASE DATABASE (Required)
# Get your keys from: https://supabase.com/dashboard/project/uzwzundmdlxyitiyhhtn/settings/api
# ============================================
SUPABASE_URL=https://uzwzundmdlxyitiyhhtn.supabase.co
SUPABASE_KEY=your_anon_public_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# ============================================
# LLM PROVIDERS (Optional - choose one or more)
# ============================================
LLM_PROVIDER=mock
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=4096

# Groq (Free tier available) - https://console.groq.com
GROQ_API_KEY=

# Google AI (Gemini) - https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# OpenRouter - https://openrouter.ai/keys
OPENROUTER_API_KEY=

# Together AI - https://api.together.xyz/settings/api-keys
TOGETHER_API_KEY=

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic Claude - https://console.anthropic.com
ANTHROPIC_API_KEY=

# Ollama (Local) - No API key needed
OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# RAG CONFIGURATION (Optional)
# ============================================
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_EMBEDDING_MODEL=all-MiniLM-L6-v2
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_HYBRID_SEARCH=true

# ============================================
# LEGACY DATABASE (Optional - Neon)
# ============================================
NEON_HOST=
NEON_DATABASE=
NEON_USER=
NEON_PASSWORD=
NEON_PORT=5432
